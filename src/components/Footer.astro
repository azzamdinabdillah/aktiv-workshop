---
// Footer component with responsive design
---

<footer class="bg-white">
  <div class="max-w-1176 mx-auto padding-section py-8 md:py-12 lg:py-[52px]">
    <!-- Logo and Description Section -->
    <div class="flex flex-col gap-4 items-center justify-center mb-6 lg:mb-8">
      <!-- Logo -->
      <div class="flex gap-2 items-center justify-center">
        <div class="w-8 h-8 md:w-9 md:h-9 lg:w-10 lg:h-10">
          <img
            src=`${import.meta.env.ICONS_FOLDER}/logo.svg`
            alt="AKTIV Logo"
            class="w-full h-full"
          />
        </div>
        <h2
          class="font-bold text-xl md:text-2xl lg:text-2xl text-black leading-none"
        >
          AKTIV
        </h2>
      </div>

      <!-- Description -->
      <p
        class="font-medium text-sm md:text-base lg:text-base text-gray text-center max-w-md"
      >
        Leading online workshop platform for professional skill development.
      </p>
    </div>

    <!-- Divider Line -->
    <div class="w-full h-px bg-gray-200 mb-6 lg:mb-8"></div>

    <!-- Bottom Section -->
    <div
      class="flex flex-col md:flex-row items-center justify-between gap-4 md:gap-8 lg:gap-12"
    >
      <!-- Navigation Links -->
      <div
        class="flex flex-wrap gap-4 md:gap-6 items-center justify-center md:justify-start"
      >
        <a
          href={`${import.meta.env.ROOT_FOLDER}#workshop`}
          class="font-medium text-sm md:text-base lg:text-base text-gray hover:text-black transition-colors"
        >
          Workshop
        </a>
        <a
          href={`${import.meta.env.ROOT_FOLDER}#community`}
          class="font-medium text-sm md:text-base lg:text-base text-gray hover:text-black transition-colors"
        >
          Community
        </a>
        <a
          href={`${import.meta.env.ROOT_FOLDER}#testimone`}
          class="font-medium text-sm md:text-base lg:text-base text-gray hover:text-black transition-colors"
        >
          Testimone
        </a>
        <a
          href={`${import.meta.env.ROOT_FOLDER}/view-booking`}
          class="font-medium text-sm md:text-base lg:text-base text-gray hover:text-black transition-colors"
        >
          Check My Booking
        </a>
      </div>

      <!-- Copyright and Social Links -->
      <div
        class="flex flex-col flex-wrap justify-end md:flex-row items-center gap-4 md:gap-6 lg:gap-12"
      >
        <!-- Copyright -->
        <p
          class="font-medium text-sm md:text-base lg:text-base text-gray text-center md:text-left"
        >
          Â© 2025 Aktiv Copyright
        </p>

        <!-- Social Links -->
        <div class="flex gap-4 md:gap-6 items-center">
          <a
            href="#"
            class="font-medium text-sm md:text-base lg:text-base text-gray hover:text-black transition-colors"
          >
            Instagram
          </a>
          <a
            href="#"
            class="font-medium text-sm md:text-base lg:text-base text-gray hover:text-black transition-colors"
          >
            Facebook
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
