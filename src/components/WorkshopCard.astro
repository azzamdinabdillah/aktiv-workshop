---
export interface Props {
  id: number;
  instructorName: string;
  instructorTitle: string;
  instructorImage: string;
  workshopImage: string;
  status: "open" | "started" | "closed";
  date: string;
  time: string;
  title: string;
  category: string;
  price: string;
}

const {
  id,
  instructorName,
  instructorTitle,
  instructorImage,
  workshopImage,
  status,
  date,
  time,
  title,
  category,
  price,
} = Astro.props;

// Status badge configuration
const statusConfig = {
  open: {
    icon: `${import.meta.env.ICONS_FOLDER}/badge-workshop-card-open.svg`,
    bgColor: "bg-[#1f8a70]",
    text: "OPEN",
  },
  started: {
    icon: `${import.meta.env.ICONS_FOLDER}/badge-workshop-card-started.svg`,
    bgColor: "bg-orange",
    text: "STARTED",
  },
  closed: {
    icon: `${import.meta.env.ICONS_FOLDER}/badge-workshop-card-closed.svg`,
    bgColor: "bg-[#eb5757]",
    text: "CLOSED",
  },
};

const currentStatus = statusConfig[status];
---

<div
  class="bg-white rounded-[12px] md:rounded-[20px] lg:rounded-[24px] p-3 md:p-5 lg:p-6 w-full max-w-[250px] md:max-w-full flex flex-col gap-4 md:gap-6 lg:gap-9 shadow-sm hover:shadow-2xl hover:shadow-orange/25 hover:-translate-y-2 transition-all duration-500 ease-out flex-shrink-0 cursor-pointer group border border-gray-100 hover:border-orange relative overflow-hidden"
>
  <!-- Animated background gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-orange/5 via-transparent to-[#1f8a70]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700 ease-out pointer-events-none"
  >
  </div>

  <!-- Floating particles effect -->
  <div
    class="absolute top-4 right-4 w-2 h-2 bg-orange/30 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-500 delay-100"
  >
  </div>
  <div
    class="absolute bottom-6 left-6 w-1 h-1 bg-[#1f8a70]/40 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-pulse transition-opacity duration-500 delay-200"
  >
  </div>
  <!-- Instructor Info & Workshop Image -->
  <div class="flex flex-col gap-3 md:gap-4 lg:gap-[18px] w-full">
    <!-- Instructor Profile -->
    <div class="flex gap-2 md:gap-3 items-center w-full relative z-10">
      <div
        class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 rounded-full overflow-hidden flex-shrink-0 transition-all duration-500 ease-out group-hover:ring-4 group-hover:ring-orange/20 group-hover:ring-offset-2 group-hover:scale-105"
      >
        <img
          src={instructorImage}
          alt={instructorName}
          class="w-full h-full object-cover transition-all duration-500 ease-out group-hover:scale-110 group-hover:brightness-110 group-hover:contrast-105"
        />
      </div>
      <div class="flex flex-col gap-0.5 flex-grow min-w-0">
        <h3
          class="font-semibold text-[#09093c] text-sm md:text-base lg:text-lg leading-tight transition-colors duration-500 ease-out group-hover:text-orange"
        >
          {instructorName}
        </h3>
        <p
          class="font-medium text-[#757c98] text-xs md:text-sm lg:text-base leading-tight transition-colors duration-500 ease-out group-hover:text-[#09093c] group-hover:font-semibold"
        >
          {instructorTitle}
        </p>
      </div>
    </div>

    <!-- Workshop Image with Status Badge -->
    <div
      class="relative w-full h-[140px] md:h-[170px] lg:h-[200px] rounded-[8px] md:rounded-[12px] lg:rounded-[16px] overflow-hidden group-hover:rounded-[12px] md:group-hover:rounded-[16px] lg:group-hover:rounded-[20px] transition-all duration-500 ease-out"
    >
      <img
        src={workshopImage}
        alt={title}
        class="w-full h-full object-cover transition-all duration-700 ease-out group-hover:scale-110 group-hover:brightness-110 group-hover:contrast-105 group-hover:saturate-110"
      />

      <!-- Dynamic overlay gradient -->
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 ease-out"
      >
      </div>

      <!-- Shimmer effect -->
      <div
        class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-out"
      >
      </div>

      <!-- Status Badge -->
      <div
        class={`absolute top-2 left-2 md:top-3 md:left-3 ${currentStatus.bgColor} flex items-center gap-1 px-3 py-2 md:px-4 md:py-2.5 lg:px-5 lg:py-3 rounded-[100px] transition-all duration-500 ease-out group-hover:scale-110 group-hover:shadow-xl group-hover:shadow-black/25 relative z-50 w-fit`}
      >
        <img
          src={currentStatus.icon}
          alt={status}
          class="w-4 h-4 md:w-5 md:h-5 lg:w-6 lg:h-6 transition-all duration-500 ease-out group-hover:rotate-180 group-hover:scale-110"
        />
        <span
          class="font-semibold text-white text-xs md:text-sm lg:text-base whitespace-nowrap transition-all duration-500 ease-out"
        >
          {currentStatus.text}
        </span>
      </div>
    </div>

    <!-- Workshop Details -->
    <div class="flex flex-col gap-1.5 md:gap-2 w-full">
      <!-- Date and Time -->
      <div class="flex gap-2 md:gap-3 items-start w-full">
        <div class="flex items-center gap-1">
          <img
            src={`${import.meta.env.ICONS_FOLDER}/calendar-2.svg`}
            alt="Calendar"
            class="w-4 h-4 md:w-5 md:h-5 lg:w-6 lg:h-6"
          />
          <span
            class="font-medium text-[#757c98] text-xs md:text-sm lg:text-base capitalize"
          >
            {date}
          </span>
        </div>
        <div class="flex items-center gap-1">
          <img
            src={`${import.meta.env.ICONS_FOLDER}/timer.svg`}
            alt="Time"
            class="w-4 h-4 md:w-5 md:h-5 lg:w-6 lg:h-6"
          />
          <span
            class="font-medium text-[#757c98] text-xs md:text-sm lg:text-base capitalize"
          >
            {time}
          </span>
        </div>
      </div>

      <!-- Workshop Title -->
      <h2
        class="font-semibold text-[#09093c] text-sm md:text-lg lg:text-xl leading-[1.3] md:leading-[1.35] lg:leading-[1.4] capitalize line-clamp-2 transition-colors duration-500 ease-out group-hover:text-orange relative z-10"
      >
        {title}
      </h2>

      <!-- Category -->
      <p
        class="font-medium text-[#757c98] text-xs md:text-sm lg:text-base transition-colors duration-500 ease-out group-hover:text-[#09093c] group-hover:font-semibold relative z-10"
      >
        {category}
      </p>
    </div>
  </div>

  <!-- Price and Action Button -->
  <div class="flex gap-3 md:gap-4 lg:gap-6 items-center w-full relative z-10">
    <!-- Price -->
    <div class="flex items-center gap-1 md:gap-1.5 flex-grow">
      <span
        class="font-semibold text-[#eb5757] text-lg md:text-xl lg:text-2xl whitespace-nowrap transition-colors duration-500 ease-out group-hover:text-orange group-hover:drop-shadow-lg"
      >
        {price}
      </span>
      <span
        class="font-medium text-[#757c98] text-xs md:text-sm lg:text-base whitespace-nowrap transition duration-500 ease-out group-hover:text-[#09093c]"
      >
        /person
      </span>
    </div>

    <!-- Action Button -->
    <div
      class="bg-[rgba(252,155,76,0.09)] flex items-center justify-center p-2 md:p-2.5 lg:p-3 rounded-[100px] transition-all duration-500 ease-out cursor-pointer group-hover:bg-gradient-to-r group-hover:from-orange/20 group-hover:to-[#1f8a70]/20 group-hover:scale-110 animate-pulse"
    >
      <div
        class="bg-orange w-5 h-5 md:w-5.5 md:h-5.5 lg:w-6 lg:h-6 rounded-full flex items-center justify-center transition-all duration-500 ease-out group-hover:bg-gradient-to-br group-hover:from-orange group-hover:to-[#e8893a] group-hover:scale-125"
      >
        <span
          class="font-bold text-white text-sm md:text-sm lg:text-base leading-none transition-all duration-500 ease-out group-hover:scale-110"
        >
          &gt;
        </span>
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
