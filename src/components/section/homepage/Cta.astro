---
import Button from "../../Button.astro";
---

<div
  class="max-w-1176 mx-auto padding-section"
>
  <div class="flex flex-col md:flex-row gap blue-gradient-darker rounded-2xl p-6 md:p-8 pb-0 md:pl-[70px] lg:pl-[90px] md:pb-0 md:pr-2 md:pt-0 md gap-5 justify-between overflow-hidden">
    <div
      class="flex flex-col gap-4 md:gap-6 lg:gap-[52px] items-start justify-center shrink-0 md:w-[400px] lg:w-[47%]"
    >
      
       <div class="flex flex-col gap-4 md:gap-6 lg:gap-8">
           <div
             class="bg-light-blue px-4 py-2 md:px-6 md:py-3 lg:px-8 lg:py-3 rounded-full w-fit"
           >
             <p
               class="text-blue text-xs md:text-base lg:text-16 font-semibold md:whitespace-nowrap"
             >
               What are you waiting for? Join now ðŸ”¥
             </p>
           </div>
     
           <!-- Main Heading -->
           <div class="text-white">
             <h2
               class="text-32 font-bold leading-snug md:leading-relaxed capitalize"
             >
               Study more purposefully and fill
               your day with productivity
             </h2>
           </div>
       </div>

      <!-- CTA Button -->
      <div class="mt-2">
        <Button icon="white-orange-arrow-right.svg" variant="orange" size="medium" href="#">Join Now</Button>
      </div>
    </div>

    <img src=`${import.meta.env.IMG_FOLDER}/cta.png` alt="CTA Image" class="w-full h-full object-cover md:max-w-[400px] lg:max-w-[469px]">
  </div>
</div>
