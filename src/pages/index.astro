---
import BaseLayout from "../layouts/BaseLayout.astro"
import Navbar from "../components/Navbar.astro"
---

<BaseLayout title="Home">
	<Navbar />
    <!-- Hero -->
	 <div class="relative">
		 <div class="blue-gradient">
			<div class="flex flex-col gap-24 justify-center items-center max-w-[550px] md:max-w-[600px] lg:max-w-[800px] mx-auto pt-10 md:pt-20 lg:pt-[95px] px-2">
				<div class="p-1 pr-3 md:pr-4 lg:pr-5 gap-1.5 md:gap-2 lg:gap-2.5 flex items-center bg-light-blue rounded-full w-fit">
