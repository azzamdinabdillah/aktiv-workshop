---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import SubPageHeader from "../components/SubPageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Input from "../components/Input.astro";
import Alert from "../components/Alert.astro";
import Button from "../components/Button.astro";
import Select from "../components/Select.astro";
import UploadImage from "../components/UploadImage.astro";
import WorkshopDetailsLeft from "../components/section/workshop/WorkshopDetailsLeft.astro";

// Example breadcrumb items - you can customize these
const breadcrumbItems = [
  { label: "Homepage", url: import.meta.env.ROOT_FOLDER },
  {
    label: "Workshop Details",
    url: `${import.meta.env.ROOT_HREF_PAGES}/workshop-details`,
  },
  {
    label: "Booking Workshop",
    url: `${import.meta.env.ROOT_HREF_PAGES}/booking-workshop`,
  },
  { label: "Confirmation Payment", isActive: true },
];

// Bank options data
const bankOptions = [
  {
    id: "bca",
    name: "BCA Activ Bank",
    accountNumber: "1935 0009 1200",
    image: "bca.png",
  },
  {
    id: "bni",
    name: "BNI Activ Bank",
    accountNumber: "1200 1935 0009",
    image: "bni.png",
  },
  {
    id: "bri",
    name: "BRI Activ Bank",
    accountNumber: "0009 1200 1935",
    image: "bri.png",
  },
];
---

<BaseLayout title="Booking Workshop">
  <div class="bg-gray-blue">
    <Navbar />

    <SubPageHeader title="Booking Workshop" breadcrumbItems={breadcrumbItems} />
    <div
      class="w-[93%] max-w-1176 xl:w-full mx-auto -translate-y-[100px] grid gap-4 md:gap-6 lg:gap-8 lg:grid-cols-[420px_1fr]"
    >
      <!-- Workshop Details Card with Accordion -->
      <WorkshopDetailsLeft />

      <div class="flex flex-col gap-4 md:gap-6 lg:gap-8">
        <!-- Payment Details Section -->
        <div
          class="bg-white rounded-xl md:rounded-2xl lg:rounded-3xl p-4 md:p-6 lg:p-8 flex flex-col gap-4 md:gap-6 lg:gap-8"
        >
          <!-- Section Title -->
          <div class="flex flex-col gap-4 md:gap-4">
            <h2
              class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
            >
              Payments Details
            </h2>

            <!-- Payment Summary Card -->
            <div
              class="bg-white border border-[#e6e7eb] rounded-lg md:rounded-xl lg:rounded-xl p-4 md:p-6 lg:p-6 flex flex-col gap-3 md:gap-4 lg:gap-4"
            >
              <!-- Quantity Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  Quantity
                </span>
                <span
                  class="font-semibold text-black text-base md:text-lg lg:text-lg"
                >
                  2
                </span>
              </div>

              <!-- Price Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  Price
                </span>
                <span
                  class="font-semibold text-black text-base md:text-lg lg:text-lg"
                >
                  Rp160.000
                </span>
              </div>

              <!-- PPN Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  PPN 11%
                </span>
                <span
                  class="font-semibold text-black text-base md:text-lg lg:text-lg"
                >
                  Rp5.000
                </span>
              </div>

              <!-- Divider Line -->
              <div class="border-t border-[#e6e7eb] my-1 md:my-2 lg:my-2"></div>

              <!-- Total Price Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  Total Price
                </span>
                <span
                  class="font-semibold text-[#eb5757] text-base md:text-lg lg:text-lg"
                >
                  Rp319.680
                </span>
              </div>
            </div>
          </div>

          <!-- Your Bank Account Section -->
          <div class="flex flex-col gap-4 md:gap-6 lg:gap-4">
            <h3
              class="capitalize font-bold text-[#09093c] text-lg md:text-xl lg:text-xl leading-tight"
            >
              Your Bank Account
            </h3>

            <div class="flex flex-col gap-4 md:gap-6 lg:gap-6">
              <!-- Select Bank Type -->
              <Select
                label="Select Bank Type"
                placeholder="Select your bank"
                icon="bank.svg"
                name="bankType"
                required={true}
                options={[
                  { value: "bca", label: "BCA" },
                  { value: "bni", label: "BNI" },
                  { value: "bri", label: "BRI" },
                  { value: "mandiri", label: "Mandiri" },
                  { value: "other", label: "Other" },
                ]}
              />

              <!-- Full Name -->
              <Input
                label="Full Name"
                placeholder="Under whose name is this bank account?"
                icon="profile-circle.svg"
                name="fullName"
                type="text"
                required={true}
              />

              <!-- Bank Account Number -->
              <Input
                label="Bank account number"
                placeholder="What is the bank account number?"
                icon="card-edit.svg"
                name="bankAccountNumber"
                type="text"
                required={true}
              />
            </div>
          </div>

          <!-- Transfer Details Section -->
          <div class="flex flex-col gap-4 md:gap-6 lg:gap-4">
            <h3
              class="capitalize font-bold text-[#09093c] text-lg md:text-xl lg:text-xl leading-tight"
            >
              Transfer Details
            </h3>

            <div
              class="bg-white border border-[#e6e7eb] rounded-xl md:rounded-2xl lg:rounded-2xl overflow-hidden"
            >
              <!-- Header -->
              <div
                class="bg-white border-b border-[#e6e7eb] px-4 md:px-8 lg:px-8 py-3 md:py-4 lg:py-4"
              >
                <h4
                  class="capitalize font-semibold text-[#09093c] text-base md:text-lg lg:text-lg text-center"
                >
                  Transfer Bank
                </h4>
              </div>

              <!-- Bank Options -->
              <div
                class="p-4 md:p-8 lg:p-8 flex flex-col gap-6 md:gap-8 lg:gap-8"
              >
                {
                  bankOptions.map((bank) => (
                    <div class="flex items-center flex-wrap gap-6 md:gap-8 lg:gap-8">
                      <div class="w-16 h-8 md:w-20 md:h-10 lg:w-20 lg:h-10 flex-shrink-0">
                        <img
                          src={`${import.meta.env.IMG_FOLDER}/${bank.image}`}
                          alt={`${bank.name} Bank`}
                          class="w-full h-full object-contain"
                        />
                      </div>
                      <div class="flex-1 flex flex-col gap-0.5">
                        <p class="font-medium text-[#757c98] text-sm md:text-base lg:text-base">
                          {bank.name}
                        </p>
                        <p class="font-semibold text-[#09093c] text-base md:text-lg lg:text-lg">
                          {bank.accountNumber}
                        </p>
                      </div>
                      <button
                        type="button"
                        class="font-semibold text-[#fc9b4c] text-base md:text-lg lg:text-lg hover:text-[#e8893a] transition-colors copy-btn"
                        data-account={bank.accountNumber}
                      >
                        Copy
                      </button>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Upload Proof of Payment Section -->
          <div class="flex flex-col gap-4 md:gap-6 lg:gap-4">
            <h3
              class="capitalize font-bold text-[#09093c] text-lg md:text-xl lg:text-xl leading-tight"
            >
              Upload Proof of Payment
            </h3>

            <UploadImage
              placeholder="Upload Proof of Payment"
              name="proofOfPayment"
              accept="image/*"
              required={true}
              maxSize={5}
            />
          </div>

          <!-- Pay Now Button -->
          <div class="w-full">
            <a href={`${import.meta.env.ROOT_HREF_PAGES}/payment-success`}>
              <Button
                variant="orange"
                size="large"
                type="submit"
                class="w-full text-center justify-center rounded-xl"
              >
                Continue to Checkout
              </Button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</BaseLayout>
