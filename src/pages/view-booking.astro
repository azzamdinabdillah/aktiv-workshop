---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import SubPageHeader from "../components/SubPageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import Input from "../components/Input.astro";
import Plus from "../components/section/homepage/Plus.astro";
---

<BaseLayout title="Booking Workshop">
  <div class="bg-gray-blue">
    <Navbar />

    <SubPageHeader
      title="View Your Booking"
      subTitle="Enter the booking code sent to your email to check the status of your booking."
      paddingNormal={true}
    >
      <div class="mt-8 md:mt-14 lg:mt-16 w-full">
        <!-- Mobile Layout: Using Input Components -->
        <div class="md:hidden w-full mx-auto bg-white rounded-2xl py-6 px-5">
          <div class="flex flex-col gap-4">
            <!-- Booking ID Input -->
            <Input
              label="Booking ID"
              placeholder="Enter your booking ID"
              icon="receipt-black.svg"
              type="text"
              required={true}
              class="w-full"
            />

            <!-- Phone Number Input -->
            <Input
              label="Phone Number"
              placeholder="Enter your phone number"
              icon="call-black.svg"
              type="tel"
              required={true}
              class="w-full"
            />

            <!-- Button -->
            <div class="w-full mt-2">
              <a href={`${import.meta.env.ROOT_FOLDER}/details-booking`}>
                <Button
                  variant="orange"
                  size="large"
                  leftIcon="search-normal.svg"
                  class="w-full"
                >
                  View My Booking
                </Button>
              </a>
            </div>
          </div>
        </div>

        <!-- Desktop Layout: Original Design -->
        <div class="hidden md:block w-full max-w-1176 mx-auto px-5 xl:px-0">
          <div
            class="bg-white rounded-full pl-6 py-3 pr-3 lg:pl-8 lg:py-3 flex items-center gap-4 lg:gap-6"
          >
            <!-- Booking ID Input -->
            <div class="flex items-center gap-2 lg:gap-2 flex-1">
              <div class="w-7 h-7 lg:w-8 lg:h-8 flex-shrink-0">
                <img
                  src={`${import.meta.env.ICONS_FOLDER}/receipt-black.svg`}
                  alt="Receipt icon"
                  class="w-full h-full"
                />
              </div>
              <div class="flex-1 min-w-0">
                <input
                  type="text"
                  placeholder="Booking ID"
                  class="w-full bg-transparent border-none outline-none text-base lg:text-lg font-semibold text-[#09093c] placeholder:text-[#09093c] capitalize"
                />
              </div>
            </div>

            <!-- Vertical Divider -->
            <div class="w-px h-6 lg:h-8 bg-gray-300 flex-shrink-0"></div>

            <!-- Phone Number Input -->
            <div class="flex items-center gap-2 lg:gap-2 flex-1">
              <div class="w-7 h-7 lg:w-8 lg:h-8 flex-shrink-0">
                <img
                  src={`${import.meta.env.ICONS_FOLDER}/call-black.svg`}
                  alt="Call icon"
                  class="w-full h-full"
                />
              </div>
              <div class="flex-1 min-w-0">
                <input
                  type="tel"
                  placeholder="Phone No"
                  class="w-full bg-transparent border-none outline-none text-base lg:text-lg font-semibold text-[#09093c] placeholder:text-[#09093c] capitalize"
                />
              </div>
            </div>

            <!-- Button -->
            <div class="flex-shrink-0">
              <a href={`${import.meta.env.ROOT_FOLDER}/details-booking`}>
                <Button
                  variant="orange"
                  size="medium"
                  leftIcon="search-normal.svg"
                  class=""
                >
                  View My Booking
                </Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </SubPageHeader>

    <div class="py-3 md:py-5 lg:py-[68px]">
      <Plus />
    </div>

    <Footer />
  </div>
</BaseLayout>
