---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import SubPageHeader from "../components/SubPageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Input from "../components/Input.astro";
import Alert from "../components/Alert.astro";
import Button from "../components/Button.astro";

// Example breadcrumb items - you can customize these
const breadcrumbItems = [
  { label: "Homepage", url: import.meta.env.ROOT_FOLDER },
  {
    label: "Workshop Details",
    url: `${import.meta.env.ROOT_FOLDER}/workshop-details`,
  },
  { label: "Booking Workshop", isActive: true },
];
---

<BaseLayout title="Booking Workshop">
  <div class="bg-gray-blue">
    <Navbar />

    <SubPageHeader title="Booking Workshop" breadcrumbItems={breadcrumbItems} />
    <div
      class="w-[93%] max-w-1176 xl:w-full mx-auto -translate-y-[100px] grid gap-4 md:gap-6 lg:gap-8 lg:grid-cols-[420px_1fr]"
    >
      <!-- Workshop Details Card with Accordion -->
      <div
        class="bg-white rounded-2xl md:rounded-3xl lg:rounded-3xl p-4 md:p-6 lg:p-8 flex flex-col gap-6 md:gap-8 h-fit"
      >
        <!-- Workshop Details Header -->
        <div class="flex flex-col gap-4 items-center">
          <h2
            class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight w-full"
          >
            Workshop Details
          </h2>

          <!-- Workshop Image and Basic Info -->
          <div class="flex flex-col gap-3 md:gap-4 lg:gap-5 w-full">
            <!-- Workshop Image -->
            <div class="w-full">
              <img
                src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=800&q=80"
                alt="Workshop Image"
                class="w-full h-48 md:h-52 lg:h-60 object-cover rounded-xl md:rounded-2xl lg:rounded-2xl"
              />
            </div>

            <div class="flex flex-col gap-3">
              <!-- Date and Time Info -->
              <div
                class="flex flex-row flex-wrap gap-2 md:gap-3 lg:gap-3 items-center w-full"
              >
                <div class="flex gap-1 md:gap-1 lg:gap-1 items-center">
                  <img
                    src=`${import.meta.env.ICONS_FOLDER}/calendar-2.svg`
                    alt="Calendar"
                    class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6"
                  />
                  <span
                    class="capitalize font-medium text-[#757c98] text-sm md:text-base lg:text-base"
                  >
                    Fri, 30 May 2024
                  </span>
                </div>
                <div class="flex gap-1 md:gap-1 lg:gap-1 items-center">
                  <img
                    src=`${import.meta.env.ICONS_FOLDER}/timer.svg`
                    alt="Timer"
                    class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6"
                  />
                  <span
                    class="capitalize font-medium text-[#757c98] text-sm md:text-base lg:text-base"
                  >
                    09:30 AM - Finish
                  </span>
                </div>
              </div>

              <!-- Workshop Title -->
              <h3
                class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-[160%]"
              >
                Mastering the Art of Public Speaking: Practical Tips and
                Powerful Techniques
              </h3>
            </div>
          </div>
        </div>

        <!-- Accordion Toggle -->
        <input
          type="checkbox"
          id="workshop-details-accordion"
          class="hidden peer"
        />

        <!-- Accordion Content -->
        <div
          class="grid grid-rows-[0fr] peer-checked:grid-rows-[1fr] transition-[grid-template-rows] duration-300 ease-in-out"
        >
          <div class="overflow-hidden">
            <div class="flex flex-col gap-6 md:gap-8">
              <!-- Instructor Details -->
              <div class="flex flex-col gap-4">
                <h4
                  class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
                >
                  Instructor Details
                </h4>
                <div
                  class="bg-white border border-[#e6e7eb] rounded-lg md:rounded-xl lg:rounded-xl p-3 md:p-4 lg:p-4 flex gap-3 items-center"
                >
                  <!-- Instructor Avatar -->
                  <div
                    class="w-12 h-12 md:w-16 md:h-16 lg:w-16 lg:h-16 rounded-full bg-gray-200 flex-shrink-0"
                  >
                    <img
                      src="https://images.unsplash.com/photo-1508214751196-bcfd4ca60f91?auto=format&fit=crop&w=800&q=80"
                      alt="Instructor"
                      class="w-full h-full object-cover rounded-full"
                    />
                  </div>

                  <!-- Instructor Info -->
                  <div class="flex-1 flex flex-col gap-0.5">
                    <h5
                      class="font-semibold text-black text-base md:text-lg lg:text-lg"
                    >
                      Megamore S Qie
                    </h5>
                    <p
                      class="font-medium text-[#757c98] text-sm md:text-base lg:text-base"
                    >
                      Motivator Instructor
                    </p>
                  </div>

                  <!-- Verified Badge -->
                  <div
                    class="bg-[#0268fb] rounded-full p-2 md:p-2.5 lg:p-2.5 flex-shrink-0"
                  >
                    <img
                      src=`${import.meta.env.ICONS_FOLDER}/verify.svg`
                      alt="Verified"
                      class="w-6 h-6 md:w-8 md:h-8 lg:w-8 lg:h-8"
                    />
                  </div>
                </div>
              </div>

              <!-- Learning Objectives -->
              <div class="flex flex-col gap-4">
                <h4
                  class="font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
                >
                  This workshop will teach
                </h4>
                <div class="flex flex-col gap-4 md:gap-6">
                  <!-- Learning Item 1 -->
                  <div class="flex gap-2 md:gap-2 lg:gap-2 items-center">
                    <img
                      src=`${import.meta.env.ICONS_FOLDER}/check.svg`
                      alt="Check"
                      class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6 flex-shrink-0"
                    />
                    <span
                      class="capitalize font-semibold text-black text-base md:text-lg lg:text-lg"
                    >
                      Crafting Compelling Messages
                    </span>
                  </div>

                  <!-- Learning Item 2 -->
                  <div class="flex gap-2 md:gap-2 lg:gap-2 items-center">
                    <img
                      src=`${import.meta.env.ICONS_FOLDER}/check.svg`
                      alt="Check"
                      class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6 flex-shrink-0"
                    />
                    <span
                      class="capitalize font-semibold text-black text-base md:text-lg lg:text-lg"
                    >
                      Enhancing Delivery Skills
                    </span>
                  </div>

                  <!-- Learning Item 3 -->
                  <div class="flex gap-2 md:gap-2 lg:gap-2 items-center">
                    <img
                      src=`${import.meta.env.ICONS_FOLDER}/check.svg`
                      alt="Check"
                      class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6 flex-shrink-0"
                    />
                    <span
                      class="capitalize font-semibold text-black text-base md:text-lg lg:text-lg"
                    >
                      Engaging Your Audience
                    </span>
                  </div>

                  <!-- Learning Item 4 -->
                  <div class="flex gap-2 md:gap-2 lg:gap-2 items-center">
                    <img
                      src=`${import.meta.env.ICONS_FOLDER}/check.svg`
                      alt="Check"
                      class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6 flex-shrink-0"
                    />
                    <span
                      class="capitalize font-semibold text-black text-base md:text-lg lg:text-lg"
                    >
                      Practical Exercises
                    </span>
                  </div>

                  <!-- Learning Item 5 -->
                  <div class="flex gap-2 md:gap-2 lg:gap-2 items-center">
                    <img
                      src=`${import.meta.env.ICONS_FOLDER}/check.svg`
                      alt="Check"
                      class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6 flex-shrink-0"
                    />
                    <span
                      class="capitalize font-semibold text-black text-base md:text-lg lg:text-lg"
                    >
                      Personal Development Plan
                    </span>
                  </div>
                </div>
              </div>

              <!-- Location Details -->
              <div class="flex flex-col gap-4">
                <h4
                  class="font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
                >
                  Location Details
                </h4>
                <div
                  class="bg-white border border-[#e6e7eb] rounded-lg md:rounded-xl lg:rounded-xl p-3 md:p-4 lg:p-5 flex flex-col gap-3 md:gap-4 lg:gap-4"
                >
                  <!-- Location Image -->
                  <div class="w-full">
                    <img
                      src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80"
                      alt="Location"
                      class="w-full h-32 md:h-40 lg:h-48 object-cover rounded-lg md:rounded-xl lg:rounded-xl"
                    />
                  </div>

                  <!-- Location Info -->
                  <div class="flex flex-col gap-2 md:gap-3 lg:gap-3">
                    <p
                      class="font-medium text-[#757c98] text-sm md:text-base lg:text-base leading-relaxed"
                    >
                      101 Cendrawasih Road, Melati, Bandung Wetan, Bandung, West
                      Java, 40116, Indonesia
                    </p>
                    <a
                      href="#"
                      class="font-semibold text-[#fc9b4c] text-sm md:text-base lg:text-base hover:underline"
                    >
                      View in Google Maps
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Show More/Less Toggle Button -->
        <label
          for="workshop-details-accordion"
          class="flex gap-1.5 md:gap-2 lg:gap-2 items-center justify-center cursor-pointer hover:opacity-80 transition-opacity"
        >
          <span
            class="capitalize font-semibold text-black text-base md:text-lg lg:text-lg"
          >
            Show More
          </span>
          <svg
            class="w-5 h-5 md:w-6 md:h-6 lg:w-6 lg:h-6 text-black peer-checked:rotate-180 transition-transform duration-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </label>
      </div>

      <div class="flex flex-col gap-4 md:gap-6 lg:gap-8 w-full">
        <!-- Security Card -->
        <div
          class="bg-white rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 flex flex-col md:flex-row gap-3 md:gap-4 lg:gap-4 items-center"
        >
          <!-- Icon Container -->
          <img
            src=`${import.meta.env.ICONS_FOLDER}/safe.svg`
            alt=""
            class="w-10 h-10 md:w-14 md:h-14 lg:w-[62px] lg:h-[62px]"
          />

          <!-- Content -->
          <div
            class="flex flex-col gap-1 md:gap-1 lg:gap-0.5 flex-1 text-center md:text-left"
          >
            <h3 class="font-semibold text-gray-900 text-18 leading-tight">
              Safe Security Pro Max+
            </h3>
            <p class="text-gray text-16 leading-normal">
              Don't worry, Your data will be kept private and protected.
            </p>
          </div>
        </div>

        <!-- Personal Information Form -->
        <div
          class="bg-white rounded-xl md:rounded-2xl lg:rounded-3xl p-4 md:p-6 lg:p-8 flex flex-col gap-4 md:gap-6 lg:gap-8"
        >
          <!-- Section Title -->
          <div class="flex flex-col gap-4 md:gap-4">
            <h2
              class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
            >
              Personal Informations
            </h2>

            <!-- Form Fields -->
            <div class="flex flex-col gap-4 md:gap-5 lg:gap-6">
              <!-- Alert Message -->
              <Alert
                type="error"
                message="Please enter data correctly. We will send the order receipt to your email."
                class="w-full"
              />
              <!-- Full Name Input -->
              <Input
                label="Full Name"
                placeholder="Write your complete name"
                icon="profile-circle.svg"
                iconAlt="Profile icon"
                type="text"
                name="fullName"
                class="w-full"
              />

              <!-- Phone Number Input -->
              <Input
                label="Phone no."
                placeholder="Give us your phone number"
                icon="call.svg"
                iconAlt="Phone icon"
                type="tel"
                name="phone"
                class="w-full"
              />

              <!-- Email Address Input -->
              <Input
                label="Email Address"
                placeholder="Write your email address"
                icon="sms.svg"
                iconAlt="Email icon"
                type="email"
                name="email"
                class="w-full"
              />
            </div>
          </div>
        </div>

        <!-- Workshop Price & Attendants Details -->
        <div
          class="bg-white rounded-2xl md:rounded-3xl p-4 md:p-6 lg:p-8 flex flex-col gap-4 md:gap-6 lg:gap-8"
        >
          <!-- Workshop Price Section -->
          <div class="flex flex-col gap-4 md:gap-4">
            <h2
              class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
            >
              Workshop Price
            </h2>
            <div
              class="flex flex-col sm:flex-row gap-4 md:gap-6 items-start sm:items-center justify-between"
            >
              <!-- Price Display -->
              <div class="flex items-baseline gap-1">
                <span
                  class="font-bold text-red-500 text-2xl md:text-3xl lg:text-[32px] leading-none"
                >
                  Rp160.000
                </span>
                <span
                  class="font-semibold text-gray text-sm md:text-base lg:text-base leading-none"
                >
                  /person
                </span>
              </div>

              <!-- Quantity Selector -->
              <div
                class="bg-white border border-gray-200 rounded-lg p-2 md:p-3 flex items-center gap-2 md:gap-3"
              >
                <button
                  class="w-5 h-5 md:w-6 md:h-6 flex items-center justify-center text-gray-500 hover:text-gray-700 transition-colors"
                >
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M8 12H16"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                  </svg>
                </button>
                <span
                  class="font-semibold text-black text-lg md:text-xl lg:text-xl text-center w-8 md:w-9"
                >
                  2
                </span>
                <button
                  class="w-5 h-5 md:w-6 md:h-6 flex items-center justify-center text-gray-500 hover:text-gray-700 transition-colors"
                >
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M12 5V19M5 12H19"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Attendants Details Section -->
          <div class="flex flex-col gap-4 md:gap-4">
            <h2
              class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
            >
              Attendants Details
            </h2>

            <div class="flex flex-col gap-4 md:gap-6">
              <!-- Attendant 1 - Open Accordion -->
              <div
                class="border border-gray-200 rounded-xl md:rounded-2xl overflow-hidden"
              >
                <input
                  type="checkbox"
                  id="attendant-1"
                  class="hidden peer"
                  checked
                />
                <label
                  for="attendant-1"
                  class="flex items-center justify-between p-4 md:p-6 cursor-pointer hover:bg-gray-50 transition-colors"
                >
                  <h3
                    class="font-semibold text-black text-base md:text-lg lg:text-lg"
                  >
                    Attendants 1
                  </h3>
                  <svg
                    class="w-5 h-5 md:w-6 md:h-6 text-gray-500 peer-checked:rotate-180 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"></path>
                  </svg>
                </label>

                <!-- Accordion Content using CSS Grid -->
                <div
                  class="grid grid-rows-[0fr] peer-checked:grid-rows-[1fr] transition-[grid-template-rows] duration-300 ease-in-out"
                >
                  <div class="overflow-hidden">
                    <div class="p-4 md:p-6 border-t border-gray-200">
                      <div class="flex flex-col gap-4 md:gap-6">
                        <!-- Full Name Input -->
                        <Input
                          label="Full Name"
                          placeholder="Attendant Name"
                          icon="profile-circle.svg"
                          iconAlt="Profile icon"
                          type="text"
                          name="attendant1_fullName"
                          class="w-full"
                        />

                        <!-- Occupation Input -->
                        <Input
                          label="Occupation"
                          placeholder="Attendant Status"
                          icon="briefcase.svg"
                          iconAlt="Briefcase icon"
                          type="text"
                          name="attendant1_occupation"
                          class="w-full"
                        />

                        <!-- Email Address Input -->
                        <Input
                          label="Email Address"
                          placeholder="Attendant Email Address"
                          icon="sms.svg"
                          iconAlt="Email icon"
                          type="email"
                          name="attendant1_email"
                          class="w-full"
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Attendant 2 - Closed Accordion -->
              <div
                class="border border-gray-200 rounded-xl md:rounded-2xl overflow-hidden"
              >
                <input type="checkbox" id="attendant-2" class="hidden peer" />
                <label
                  for="attendant-2"
                  class="flex items-center justify-between p-4 md:p-6 cursor-pointer hover:bg-gray-50 transition-colors"
                >
                  <h3
                    class="font-semibold text-black text-base md:text-lg lg:text-lg"
                  >
                    Attendants 2
                  </h3>
                  <svg
                    class="w-5 h-5 md:w-6 md:h-6 text-gray-500 peer-checked:rotate-180 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"></path>
                  </svg>
                </label>

                <!-- Accordion Content using CSS Grid -->
                <div
                  class="grid grid-rows-[0fr] peer-checked:grid-rows-[1fr] transition-[grid-template-rows] duration-300 ease-in-out"
                >
                  <div class="overflow-hidden">
                    <div class="p-4 md:p-6 border-t border-gray-200">
                      <div class="flex flex-col gap-4 md:gap-6">
                        <!-- Full Name Input -->
                        <Input
                          label="Full Name"
                          placeholder="Attendant Name"
                          icon="profile-circle.svg"
                          iconAlt="Profile icon"
                          type="text"
                          name="attendant2_fullName"
                          class="w-full"
                        />

                        <!-- Occupation Input -->
                        <Input
                          label="Occupation"
                          placeholder="Attendant Status"
                          icon="briefcase.svg"
                          iconAlt="Briefcase icon"
                          type="text"
                          name="attendant2_occupation"
                          class="w-full"
                        />

                        <!-- Email Address Input -->
                        <Input
                          label="Email Address"
                          placeholder="Attendant Email Address"
                          icon="sms.svg"
                          iconAlt="Email icon"
                          type="email"
                          name="attendant2_email"
                          class="w-full"
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Details Section -->
        <div
          class="bg-white rounded-xl md:rounded-2xl lg:rounded-3xl p-4 md:p-6 lg:p-8 flex flex-col gap-4 md:gap-6 lg:gap-8"
        >
          <!-- Section Title -->
          <div class="flex flex-col gap-4 md:gap-4">
            <h2
              class="capitalize font-bold text-black text-lg md:text-xl lg:text-xl leading-tight"
            >
              Payments Details
            </h2>

            <!-- Payment Summary Card -->
            <div
              class="bg-white border border-[#e6e7eb] rounded-lg md:rounded-xl lg:rounded-xl p-4 md:p-6 lg:p-6 flex flex-col gap-3 md:gap-4 lg:gap-4"
            >
              <!-- Quantity Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  Quantity
                </span>
                <span
                  class="font-semibold text-black text-base md:text-lg lg:text-lg"
                >
                  2
                </span>
              </div>

              <!-- Price Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  Price
                </span>
                <span
                  class="font-semibold text-black text-base md:text-lg lg:text-lg"
                >
                  Rp160.000
                </span>
              </div>

              <!-- PPN Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  PPN 11%
                </span>
                <span
                  class="font-semibold text-black text-base md:text-lg lg:text-lg"
                >
                  Rp5.000
                </span>
              </div>

              <!-- Divider Line -->
              <div class="border-t border-[#e6e7eb] my-1 md:my-2 lg:my-2"></div>

              <!-- Total Price Row -->
              <div class="flex items-center justify-between">
                <span
                  class="font-medium text-[#757c98] text-sm md:text-base lg:text-base capitalize"
                >
                  Total Price
                </span>
                <span
                  class="font-semibold text-[#eb5757] text-base md:text-lg lg:text-lg"
                >
                  Rp319.680
                </span>
              </div>
            </div>
          </div>

          <!-- Pay Now Button -->
          <div class="w-full">
            <Button
              variant="orange"
              size="large"
              type="submit"
              class="w-full text-center justify-center rounded-xl"
            >
              Pay Now
            </Button>
          </div>
        </div>
      </div>
    </div>

    <Footer />
  </div>
</BaseLayout>
