---

<BaseLayout title="Workshop by Category">
  <Navbar />
  <div
    class="bg-gray-blue px-4 md:px-6 pb-4 md:pb-6 lg:pb-[100px] pt-[120px] md:pt-[140px] lg:pt-[160px]"
  >
    <div class="max-w-1176 mx-auto flex flex-col gap-9">
      <!-- Header Section -->
      <div class="text-center flex-col flex items-center gap-1">
        <h1
          class="text-2xl md:text-3xl lg:text-[32px] font-black text-[#09093c] mb-2 md:mb-3 lg:mb-4 capitalize"
        >
          Self Improvement (9)
        </h1>
        <div class="text-black">
            <Breadcrumb items={breadcrumbItems} />
        </div>
      </div>

      <!-- Workshop Grid -->
      <div
        class="flex gap-4 md:gap-6 lg:gap-6 overflow-x-auto md:overflow-x-visible pb-4 md:pb-0 md:grid md:grid-cols-2 lg:grid-cols-3 md:auto-rows-fr lg:auto-rows-fr scrollbar-hide"
      >
        {
          workshops.map((workshop) => (
            <a
              href={`${import.meta.env.ROOT_FOLDER}/workshop-details`}
              class="block flex-shrink-0 md:flex-shrink"
            >
              <WorkshopCard
                id={workshop.id}
                instructorName={workshop.instructorName}
                instructorTitle={workshop.instructorTitle}
                instructorImage={workshop.instructorImage}
                workshopImage={workshop.workshopImage}
                status={workshop.status}
                date={workshop.date}
                time={workshop.time}
                title={workshop.title}
                category={workshop.category}
                price={workshop.price}
              />
            </a>
          ))
        }
      </div>
    </div>
  </div>
  <Footer />
</BaseLayout>
